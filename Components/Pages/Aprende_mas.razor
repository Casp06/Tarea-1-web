@page "/aprende_mas"
@rendermode InteractiveServer

<PageTitle>Aprende Mas</PageTitle>

<h1>Aprende Mas</h1>

@if(mostrarVideo){
    <div class="embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item w-100 "   src="@urlVideo" allowfullscreen></iframe>
    </div>
    

    <button class="btn btn-primary" @onclick="()=>mostrarVideo = false">Cerrar Video</button>
}else{

<div class="row">
    @foreach (var video in videos){
        <div class="col-md-4 mb-3">
                <div class="card">
  <img @onclick="()=>verVideo(video)" src="https://i.ytimg.com/vi/@video.Url/hqdefault.jpg" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">Video</h5>
    <p class="card-text">@video.Titulo</p>
    <a href="https://www.youtube.com/watch?v=@video.Url" class="btn btn-primary">Ver video</a>
  </div>
</div>
        </div>
    }

</div>
}


